                  <Label fx:id="emailLabel" mouseTransparent="true" styleClass="register-labels" text="Email universitaria" />
                  <TextField fx:id="emailField" prefHeight="27.0" prefWidth="333.0" styleClass="register-fields" stylesheets="@style.css" />
               </children>
            </StackPane>
            <StackPane alignment="CENTER_LEFT" prefHeight="51.0" prefWidth="333.0">
