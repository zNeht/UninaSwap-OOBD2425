               <children>
                  <PasswordField fx:id="confirmPasswordField" prefHeight="25.0" prefWidth="333.0" styleClass="register-fields" stylesheets="@style.css" />
                  <Label fx:id="confirmPasswordLabel" mouseTransparent="true" styleClass="register-labels" text="Conferma Password" />
               </children>
            </StackPane>
         </children>
      </VBox>
      <Label layoutX="162.0" layoutY="480.0" prefHeight="25.0" prefWidth="291.0" text="Il Mercatino degli Studenti Universitari" textFill="WHITE" AnchorPane.bottomAnchor="14.0">
