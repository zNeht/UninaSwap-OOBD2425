<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefWidth="200" spacing="8" styleClass="card" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.uninaswapoobd2425.controller.annuncioCardController">

    <StackPane>
        <ImageView fx:id="img" fitHeight="160" fitWidth="200" preserveRatio="false" />
        <Label fx:id="badgeTipo" styleClass="badge" StackPane.alignment="TOP_LEFT" />
    </StackPane>

    <HBox alignment="CENTER_LEFT" spacing="6">
        <Label fx:id="titolo" maxWidth="1.0E9" styleClass="card-title" HBox.hgrow="ALWAYS" />
        <HBox fx:id="wishlistPill" alignment="CENTER" onMouseClicked="#handleWishlistPill" spacing="4" styleClass="wishlist-pill">
            <ToggleButton fx:id="btnWishlist" onAction="#handleWishlist" styleClass="wishlist-btn" stylesheets="@style.css" text="â™¡" />
            <Label fx:id="lblWishlistCount" styleClass="wishlist-count" text="0" />
        </HBox>
    </HBox>
    <HBox alignment="CENTER_LEFT" spacing="8">
        <Label fx:id="prezzo" minWidth="0" styleClass="price" textOverrun="CLIP" />

        <Label fx:id="categoria" minWidth="0" styleClass="chip" textOverrun="CLIP" />

    </HBox>

    <Label fx:id="luogo" styleClass="muted" />
</VBox>
