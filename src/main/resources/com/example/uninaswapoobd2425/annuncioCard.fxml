<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.uninaswapoobd2425.controller.annuncioCardController"
      styleClass="card"
      spacing="8" prefWidth="200">

    <StackPane>
        <ImageView fx:id="img" fitWidth="200" fitHeight="160" preserveRatio="false"/>
        <Label fx:id="badgeTipo" styleClass="badge" StackPane.alignment="TOP_LEFT"/>
    </StackPane>

    <HBox spacing="6" alignment="CENTER_LEFT">
        <Label fx:id="titolo" styleClass="card-title" HBox.hgrow="ALWAYS" maxWidth="1.0E9"/>
        <HBox fx:id="wishlistPill" onMouseClicked="#handleWishlistPill" alignment="CENTER" spacing="4" styleClass="wishlist-pill">
            <ToggleButton fx:id="btnWishlist" onAction="#handleWishlist" text="â™¡" styleClass="wishlist-btn"/>
            <Label fx:id="lblWishlistCount" text="0" styleClass="wishlist-count"/>
        </HBox>
    </HBox>
    <HBox spacing="8" alignment="CENTER_LEFT">
        <Label fx:id="prezzo" styleClass="price" minWidth="0" textOverrun="CLIP"/>

        <Label fx:id="categoria" styleClass="chip" minWidth="0" textOverrun="CLIP"/>

    </HBox>

    <Label fx:id="luogo" styleClass="muted"/>
</VBox>
