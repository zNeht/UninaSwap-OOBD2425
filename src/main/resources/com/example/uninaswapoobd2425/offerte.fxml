<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.uninaswapoobd2425.controller.offerteController"
      spacing="14" styleClass="offers-page">
    <padding>
        <Insets top="6" right="6" bottom="6" left="6"/>
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="8">
        <Label text="Offerte ricevute (in attesa)" styleClass="section-title"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="btnToggleRicevuteAttesa" text="▾" onAction="#toggleRicevuteAttesa" styleClass="btn-ghost"/>
    </HBox>
    <TilePane fx:id="tileRicevuteAttesa" prefColumns="3" prefTileWidth="280" hgap="14" vgap="14" tileAlignment="TOP_LEFT" />

    <HBox alignment="CENTER_LEFT" spacing="8">
        <Label text="Offerte ricevute (accettate)" styleClass="section-title"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="btnToggleRicevuteAccettate" text="▾" onAction="#toggleRicevuteAccettate" styleClass="btn-ghost"/>
    </HBox>
    <TilePane fx:id="tileRicevuteAccettate" prefColumns="3" prefTileWidth="280" hgap="14" vgap="14" tileAlignment="TOP_LEFT" />

    <HBox alignment="CENTER_LEFT" spacing="8">
        <Label text="Offerte ricevute (rifiutate/ritirate)" styleClass="section-title"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="btnToggleRicevuteChiuse" text="▾" onAction="#toggleRicevuteChiuse" styleClass="btn-ghost"/>
    </HBox>
    <TilePane fx:id="tileRicevuteChiuse" prefColumns="3" prefTileWidth="280" hgap="14" vgap="14" tileAlignment="TOP_LEFT" />

    <HBox alignment="CENTER_LEFT" spacing="8">
        <Label text="Offerte accettate" styleClass="section-title"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="btnToggleAccettate" text="▾" onAction="#toggleAccettate" styleClass="btn-ghost"/>
    </HBox>
    <TilePane fx:id="tileAccettate" prefColumns="3" prefTileWidth="280" hgap="14" vgap="14" tileAlignment="TOP_LEFT" />

    <HBox alignment="CENTER_LEFT" spacing="8">
        <Label text="Offerte inviate (attive)" styleClass="section-title"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="btnToggleInviateAttive" text="▾" onAction="#toggleInviateAttive" styleClass="btn-ghost"/>
    </HBox>
    <TilePane fx:id="tileInviateAttive" prefColumns="3" prefTileWidth="280" hgap="14" vgap="14" tileAlignment="TOP_LEFT" />

    <HBox alignment="CENTER_LEFT" spacing="8">
        <Label text="Offerte inviate (rifiutate / ritirate)" styleClass="section-title"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="btnToggleInviateRifiutate" text="▾" onAction="#toggleInviateRifiutate" styleClass="btn-ghost"/>
    </HBox>
    <TilePane fx:id="tileInviateRifiutate" prefColumns="3" prefTileWidth="280" hgap="14" vgap="14" tileAlignment="TOP_LEFT" />
</VBox>
